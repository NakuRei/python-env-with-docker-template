{
    "files.eol": "\n",
    "[python]": {
        "editor.tabSize": 4,
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
    },
    "flake8.args": [
        "--ignore=E203,W503",
        "--max-line-length=80"
    ],
    "black-formatter.args": [
        "--line-length=80"
    ],
    "isort.args": [
        "--profile",
        "black"
    ],
}
